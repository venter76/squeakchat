<div class="container mt-5">
  <h1>Register</h1>

  <% if (success && success.length > 0) { %>
    <div class="alert alert-success">
      <%= success[0] %>  <!-- Displaying the first message -->
    </div>
  <% } %>

  <% if (error && error.length > 0) { %>
    <div class="alert alert-danger error-message" role="alert">
        <%= error[0] %>
    </div>
<% } %>

  <!-- <% if (typeof error !== 'undefined' && error && error.length > 0) { %>
    <div class="alert alert-danger">
        <%= error[0] %>   Displaying the first error message -->
    <!-- </div>
<% } %> --> 

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /register route -->
          <form action="/register" method="POST">
            <div class="form-group">
              <label for="email">Email</label>
              <small id="passwordHelp" class="form-text text-danger">Valid email address only</small>
              <input type="email" class="form-control" name="username">
            </div>
            <br>
            <div class="form-group">
              <label for="password">Create Password </label>
              <small id="passwordHelp" class="form-text text-danger">Password must be minimum 7 characters with at least 1 capital letter and 1 number.</small>
            <input type="password" class="form-control" name="password">
             
            </div>
            <div class="form-group">
              <label for="passwordConfirm">Confirm Password</label>
              <input type="password" id="passwordConfirm" class="form-control" name="passwordConfirm">
          </div>
          <br>
            <button type="submit" class="btn btn-dark">Register</button>
            <!-- <a href="/login" class="btn btn-dark">Login</a> -->
          </form>

        </div>
      </div>
    </div>

   

  </div>
</div>






<script>
 const form = document.querySelector('form');
form.addEventListener('submit', function(event) {
    const email = document.querySelector('input[name="username"]').value;
    const password = document.querySelector('input[name="password"]').value;
    const passwordConfirm = document.querySelector('input[name="passwordConfirm"]').value;

    if (!email.endsWith("@gmail.com")) {
        event.preventDefault();
        alert('Only gmail address can be used.');
        return;
    }

    const passwordPattern = /^(?=.*[A-Z])(?=.*\d)[A-Za-z\d]{7,}$/;
    if (!passwordPattern.test(password)) {
        event.preventDefault();
        alert('Password must be minimum 7 characters with at least 1 capital letter and 1 number.');
        return;
    }

    if (password !== passwordConfirm) {
        event.preventDefault();
        alert('Passwords do not match');
        return;
    }
});


</script>

